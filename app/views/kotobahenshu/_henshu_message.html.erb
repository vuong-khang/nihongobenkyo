<% if @message %>
<div class="alert <%= @message[:type]["class"] %> fade in float-on-inner">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<i class="icon fa <%= @message[:type]["icon"] %>"></i>
	<strong><%= @message[:type]["title_jp"] %></strong>
	<% if @message[:content].kind_of?(Array) %>
	<ul>
		<% @message[:content].each do |item| %>
			<li><%= item %></li>
		<% end %>
	</ul>
	<% else %>
		<%= @message[:content] %>
	<% end %>
</div>
<% end %>